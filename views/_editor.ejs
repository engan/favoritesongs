<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Bandname">Artist / Group</label>
  <div class="col-sm-8">
    <input autofocus class="form-control" name="Bandname" value="<%= model.Bandname %>" maxlength="50" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="SongTitle">Favourite song</label>
  <div class="col-sm-7">
    <input class="form-control" name="SongTitle" value="<%= model.SongTitle %>" maxlength="100" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Year">Published year</label>
  <div class="col-sm-10">
    <input class="form-control" name="Year" value="<%= model.Year %>" maxlength="4" />
  </div>
</div>